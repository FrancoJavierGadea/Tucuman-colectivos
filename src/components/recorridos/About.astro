---
const dev = {
    name: 'Franco Javier Gadea',
    url: 'https://francogadea.com',
}
---

<div class="About">


    <slot />

    <footer>
        <p class="footer-sign">
            Hecho con <i class="bi bi-suit-heart-fill"></i> 
            <a href={dev.url} target="_blank" rel="noopener noreferrer">{dev.name}</a>
        </p>
    </footer>
</div>

<style>

    .About {
        display: flex;
        flex-direction: column;

        footer {
            margin-top: auto;
            padding-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 5px;

            .footer-sign {
                margin-bottom: 10px;
                font-size: clamp(16px, 3vw, 18px);
                font-weight: bold;
                i {
                    color: red;
                }
                a {
                    text-decoration: none;
                }
            }
        }
    }

</style>